FROM pytorch/pytorch:2.0.0-cuda11.7-cudnn8-runtime

# Çalışma dizinini ayarla
WORKDIR /app

# Ortam değişkenlerini ayarla
ENV MODEL_PATH=/app/models/model.pt
ENV PYTHONUNBUFFERED=1

# Gerekli sistem paketlerini yükle
RUN apt-get update && apt-get install -y --no-install-recommends \
    wget \
    curl \
    libgl1-mesa-glx \
    libglib2.0-0 \
    python3-dev \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Python bağımlılıklarını tek bir komutta yükle (daha az katman)
RUN pip3 install --no-cache-dir \
    runpod==0.13.0 \
    numpy==1.24.3 \
    Pillow==9.5.0 \
    opencv-python-headless==4.7.0.72 \
    pandas==2.0.3 \
    matplotlib==3.7.2

# Uygulama dosyalarını kopyala
COPY handler.py model.py utils.py /app/

# Model dizinini oluştur
RUN mkdir -p /app/models

# Handler scripti oluştur
RUN echo '#!/bin/bash \n\
set -e \n\
\n\
# Sistem ve yüklü kütüphaneleri göster \n\
echo "==== SİSTEM BİLGİLERİ ====" \n\
python3 --version \n\
pip3 list | grep -e torch -e numpy -e Pillow -e opencv \n\
\n\
# Modeli indir \n\
if [ ! -f ${MODEL_PATH} ]; then \n\
    echo "Model indiriliyor..." \n\
    # 2712.pt modelini indir ve model.pt olarak kaydet \n\
    wget -O ${MODEL_PATH} https://raw.githubusercontent.com/Proq3n/solar-panel-analysis-runpod/305d4577bd68da5255bd703238cb5fd9b84b46ae/2712.pt \n\
    \n\
    if [ ! -f ${MODEL_PATH} ]; then \n\
        echo "Model indirilemedi!" \n\
        exit 1 \n\
    fi \n\
    \n\
    echo "Model başarıyla indirildi: $(du -h ${MODEL_PATH})" \n\
fi \n\
\n\
# Uygulamayı başlat \n\
echo "RunPod API başlatılıyor..." \n\
exec python3 -u handler.py \n\
' > /app/start.sh && chmod +x /app/start.sh

# Başlangıç komutu 
CMD ["/bin/bash", "/app/start.sh"] 
