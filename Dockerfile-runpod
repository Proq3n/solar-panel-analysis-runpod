FROM pytorch/pytorch:2.0.0-cuda11.7-cudnn8-runtime

# Çalışma dizinini ayarla
WORKDIR /app

# Ortam değişkenlerini ayarla
ENV MODEL_PATH=/app/models/model.pt
ENV PYTHONUNBUFFERED=1

# Gerekli sistem paketlerini yükle
RUN apt-get update && apt-get install -y --no-install-recommends \
    wget \
    curl \
    libgl1-mesa-glx \
    libglib2.0-0 \
    python3-dev \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Python bağımlılıklarını yükle
RUN pip3 install --no-cache-dir --upgrade pip setuptools wheel
# RunPod API
RUN pip3 install --no-cache-dir runpod==0.13.0
# Temel veri işleme 
RUN pip3 install --no-cache-dir numpy pillow
# Görüntü işleme
RUN pip3 install --no-cache-dir opencv-python-headless
# Eksik modül: ultralytics (YOLO için gerekli)
RUN pip3 install --no-cache-dir ultralytics==8.0.20

# Uygulama dosyalarını kopyala
COPY handler.py model.py utils.py /app/

# Model dizinini oluştur
RUN mkdir -p /app/models

# Başlangıç scripti oluştur
RUN echo '#!/bin/bash \n\
set -e \n\
\n\
# Sistem bilgilerini göster \n\
echo "==== SİSTEM BİLGİLERİ ====" \n\
python3 --version \n\
pip3 list | grep -e torch -e numpy -e ultra -e opencv \n\
\n\
# Modeli indir \n\
if [ ! -f ${MODEL_PATH} ]; then \n\
    echo "Model indiriliyor..." \n\
    wget -O ${MODEL_PATH} https://raw.githubusercontent.com/Proq3n/solar-panel-analysis-runpod/305d4577bd68da5255bd703238cb5fd9b84b46ae/2712.pt \n\
    \n\
    if [ ! -f ${MODEL_PATH} ]; then \n\
        echo "Model indirilemedi!" \n\
        exit 1 \n\
    fi \n\
    \n\
    echo "Model başarıyla indirildi: $(du -h ${MODEL_PATH})" \n\
fi \n\
\n\
# Modeli test et \n\
echo "Modeli test ediyorum..." \n\
python3 -c "import torch; import ultralytics; m = torch.load(\"${MODEL_PATH}\", map_location=\"cpu\"); print(f\"Model tipi: {type(m)}\")" || echo "Model testi başarısız!" \n\
\n\
# Uygulamayı başlat \n\
echo "RunPod API başlatılıyor..." \n\
python3 -u handler.py \n\
' > /app/start.sh && chmod +x /app/start.sh

# Başlangıç komutu 
CMD ["/bin/bash", "/app/start.sh"] 
