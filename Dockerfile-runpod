FROM pytorch/pytorch:2.0.0-cuda11.7-cudnn8-runtime

# Çalışma dizinini ayarla
WORKDIR /app

# Ortam değişkenlerini ayarla
ENV MODEL_PATH=/app/models/model.pt
ENV PYTHONUNBUFFERED=1
ENV CUDA_VISIBLE_DEVICES=0

# Gerekli sistem paketlerini yükle
RUN apt-get update && apt-get install -y --no-install-recommends \
    wget \
    curl \
    libgl1-mesa-glx \
    libglib2.0-0 \
    && rm -rf /var/lib/apt/lists/*

# Basit paket kurulumları - Aşamalı olarak
RUN pip install --no-cache-dir --upgrade pip setuptools wheel
RUN pip install --no-cache-dir runpod
RUN pip install --no-cache-dir numpy pillow
RUN pip install --no-cache-dir opencv-python-headless
RUN pip install --no-cache-dir psutil
RUN pip install --no-cache-dir ultralytics

# Uygulama dosyalarını kopyala
COPY handler.py model.py utils.py /app/

# Model dizinini oluştur
RUN mkdir -p /app/models

# Başlangıç scripti oluştur - ayrı bir dosya olarak
RUN echo '#!/bin/bash
set -e

echo "==== SİSTEM BİLGİLERİ ===="
python --version
pip list | grep -e torch -e numpy -e ultra -e opencv -e psutil
nvidia-smi || echo "nvidia-smi bulunamadı"

if [ ! -f ${MODEL_PATH} ]; then
    echo "Model yok, GitHub'"'"'dan 2712.pt indiriliyor: ${MODEL_PATH}"
    mkdir -p /app/models
    
    # Doğru GitHub linkini kullan: main dalı
    if wget -q -O ${MODEL_PATH} https://github.com/Proq3n/solar-panel-analysis-runpod/raw/main/2712.pt; then
        echo "Model başarıyla indirildi (GitHub 2712.pt): $(du -h ${MODEL_PATH})"
        echo "Model içeriği kontrolü (ilk birkaç bayt): $(hexdump -n 32 -C ${MODEL_PATH} | head -n 2)"
    else
        echo "HATA: GitHub'"'"'dan 2712.pt indirme başarısız."
        echo "Link: https://github.com/Proq3n/solar-panel-analysis-runpod/raw/main/2712.pt"
        echo "Wget durumu: $?"
        echo "Sistem kontrolü:"
        df -h
        echo "Disk alanı yetersiz olabilir veya GitHub erişimi engellenmiş olabilir."
        echo "Model indirilemedi veya dosya boş."
        exit 1
    fi
else
    echo "Model zaten mevcut: ${MODEL_PATH}"
    ls -la ${MODEL_PATH}
fi

# Model erişim iznini kontrol et ve model dosyasının geçerli olduğunu doğrula
if [ -f ${MODEL_PATH} ]; then
    chmod 644 ${MODEL_PATH}
    echo "Model dosyası izinleri güncellendi: $(ls -la ${MODEL_PATH})"
    
    # Model dosyasının boyut kontrolü
    MODEL_SIZE=$(stat -c%s "${MODEL_PATH}")
    if [ "${MODEL_SIZE}" -lt 10000 ]; then
        echo "UYARI: Model dosyası çok küçük (${MODEL_SIZE} byte), geçerli bir model olmayabilir."
        echo "İçerik kontrolü:"
        hexdump -n 100 -C ${MODEL_PATH}
    else
        echo "Model dosyası boyutu makul görünüyor: ${MODEL_SIZE} byte"
    fi
fi

echo "RunPod API başlatılıyor (GPU modu)..."
exec python -u handler.py
' > /app/start.sh

# Başlangıç scriptini çalıştırılabilir yap
RUN chmod +x /app/start.sh

# Başlangıç komutu 
CMD ["/bin/bash", "/app/start.sh"] 
