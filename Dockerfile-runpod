FROM pytorch/pytorch:2.0.0-cuda11.7-cudnn8-runtime

# Çalışma dizinini ayarla
WORKDIR /app

# Ortam değişkenlerini ayarla
ENV MODEL_PATH=/app/models/model.pt
ENV PYTHONUNBUFFERED=1
ENV CUDA_VISIBLE_DEVICES=0

# Gerekli sistem paketlerini yükle
RUN apt-get update && apt-get install -y --no-install-recommends \
    wget \
    curl \
    libgl1-mesa-glx \
    libglib2.0-0 \
    git \
    && rm -rf /var/lib/apt/lists/*

# Python bağımlılıklarını düzgün sıra ve sürümlerle yükle
RUN pip install --upgrade pip && \
    pip install setuptools wheel && \
    pip install torch==2.0.0 torchvision==0.15.0 --extra-index-url https://download.pytorch.org/whl/cu117 && \
    pip install runpod==0.13.0 && \
    pip install numpy==1.24.3 pillow==9.5.0 && \
    pip install opencv-python-headless==4.7.0.72 && \
    pip install psutil==5.9.5 && \
    pip install ultralytics==8.0.20

# Bağımlılıkları kontrol et
RUN python -c "import torch; import torchvision; import ultralytics; from ultralytics import YOLO; print(f'PyTorch {torch.__version__}, TorchVision {torchvision.__version__}, Ultralytics {ultralytics.__version__}')"

# GPU/CUDA testi için script oluştur
RUN echo 'import torch; print(f"PyTorch CUDA: {torch.cuda.is_available()}, Device Count: {torch.cuda.device_count()}")' > /app/cuda_test.py

# Uygulama dosyalarını kopyala
COPY handler.py model.py utils.py /app/

# Model dizinini oluştur
RUN mkdir -p /app/models

# Başlangıç scripti oluştur
RUN echo '#!/bin/bash \n\
set -e \n\
\n\
# Sistem bilgilerini göster \n\
echo "==== SİSTEM BİLGİLERİ ====" \n\
python --version \n\
pip list | grep -e torch -e numpy -e ultra -e opencv -e psutil \n\
python /app/cuda_test.py \n\
nvidia-smi || echo "nvidia-smi bulunamadı" \n\
\n\
# Python ortamının düzgün çalışıp çalışmadığını kontrol et \n\
echo "Python modül testi yapılıyor..." \n\
python -c "import torch; import ultralytics; from ultralytics import YOLO; print(f\"Kurulum başarılı: PyTorch {torch.__version__}, Ultralytics {ultralytics.__version__}\")" \n\
\n\
# Modeli indir \n\
if [ ! -f ${MODEL_PATH} ]; then \n\
    echo "Model indiriliyor..." \n\
    wget -O ${MODEL_PATH} https://raw.githubusercontent.com/Proq3n/solar-panel-analysis-runpod/305d4577bd68da5255bd703238cb5fd9b84b46ae/2712.pt \n\
    \n\
    if [ ! -f ${MODEL_PATH} ]; then \n\
        echo "Model indirilemedi!" \n\
        exit 1 \n\
    fi \n\
    \n\
    echo "Model başarıyla indirildi: $(du -h ${MODEL_PATH})" \n\
fi \n\
\n\
# Modeli test et (CUDA üzerinde) \n\
echo "Modeli GPU üzerinde test ediyorum..." \n\
python -c "import torch; m = torch.load(\"${MODEL_PATH}\", map_location=\"cuda\"); print(f\"Model tipi: {type(m)}, CUDA: {torch.cuda.is_available()}\");" || echo "GPU model testi başarısız!" \n\
\n\
# Uygulamayı başlat \n\
echo "RunPod API başlatılıyor (GPU modu)..." \n\
exec python -u handler.py \n\
' > /app/start.sh && chmod +x /app/start.sh

# Başlangıç komutu 
CMD ["/bin/bash", "/app/start.sh"] 
