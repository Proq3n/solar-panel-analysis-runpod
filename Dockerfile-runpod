FROM pytorch/pytorch:2.0.0-cuda11.7-cudnn8-runtime

# Çalışma dizinini ayarla
WORKDIR /app

# Ortam değişkenlerini ayarla
ENV MODEL_PATH=/app/models/model.pt
ENV PYTHONUNBUFFERED=1

# Gerekli sistem paketlerini yükle (daha kapsamlı liste)
RUN apt-get update && apt-get install -y --no-install-recommends \
    wget \
    curl \
    libgl1-mesa-glx \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender1 \
    python3-dev \
    build-essential \
    git \
    && rm -rf /var/lib/apt/lists/*

# Python paketleri için pip güncellemesi
RUN pip3 install --upgrade pip 

# Temel paketleri yükle (version belirtmeden)
RUN pip3 install --no-cache-dir runpod 
RUN pip3 install --no-cache-dir numpy
RUN pip3 install --no-cache-dir pillow

# OpenCV kütüphanesini yükle (headless olmayan normal sürüm)
RUN pip3 install --no-cache-dir opencv-python

# Diğer veri işleme paketlerini yükle
RUN pip3 install --no-cache-dir pandas matplotlib

# Uygulama dosyalarını kopyala
COPY handler.py model.py utils.py /app/

# Model dizinini oluştur
RUN mkdir -p /app/models

# Handler scripti oluştur
RUN echo '#!/bin/bash \n\
set -e \n\
\n\
# Sistem ve yüklü kütüphaneleri göster \n\
echo "==== SİSTEM BİLGİLERİ ====" \n\
python3 --version \n\
pip3 list \n\
\n\
# Modeli indir \n\
if [ ! -f ${MODEL_PATH} ]; then \n\
    echo "Model indiriliyor..." \n\
    # 2712.pt modelini indir ve model.pt olarak kaydet \n\
    wget -O ${MODEL_PATH} https://raw.githubusercontent.com/Proq3n/solar-panel-analysis-runpod/305d4577bd68da5255bd703238cb5fd9b84b46ae/2712.pt \n\
    \n\
    if [ ! -f ${MODEL_PATH} ]; then \n\
        echo "Model indirilemedi!" \n\
        exit 1 \n\
    fi \n\
    \n\
    echo "Model başarıyla indirildi: $(du -h ${MODEL_PATH})" \n\
fi \n\
\n\
# Uygulamayı başlat \n\
echo "RunPod API başlatılıyor..." \n\
exec python3 -u handler.py \n\
' > /app/start.sh && chmod +x /app/start.sh

# Başlangıç komutu 
CMD ["/bin/bash", "/app/start.sh"]
